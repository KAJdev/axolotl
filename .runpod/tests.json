{
  "tests": [
    {
      "name": "quick_smoke_test_sft",
      "input": {
        "user_id": "test-user",
        "model_id": "tiny-run-sft",
        "run_id": "sft-quick-1",
        "credentials": {
          "wandb_api_key": "",
          "hf_token": ""
        },
        "args": {
          "base_model": "unsloth/tinyllama-bnb-4bit",
          "load_in_4bit": false,
          "bf16": false,
          "gradient_checkpointing": false,
          "datasets": [
            {
              "path": "vicgalle/alpaca-gpt4",
              "type": "alpaca"
            }
          ],
          "output_dir": "/workspace/out/sft-smoke",
          "adapter": "lora",
          "sequence_len": 128,
          "micro_batch_size": 1,
          "gradient_accumulation_steps": 1,
          "num_epochs": 1,
          "learning_rate": 1e-4,
          "evals_per_epoch": 1,
          "saves_per_epoch": 1
        }
      },
      "timeout": 100000
    }
  ],
  "config": {
    "gpuTypeId": "NVIDIA GeForce RTX 4090",
    "gpuCount": 1,
    "env": [
      {
        "key": "TOKENIZER",
        "value": ""
      },
      {
        "key": "DISABLE_LOG_STATS",
        "value": "true"
      }
    ],
    "allowedCudaVersions": [
      "12.7",
      "12.6",
      "12.5",
      "12.4",
      "12.3",
      "12.2",
      "12.1",
      "12.0"
    ]
  }
}